{
  "name": "bingo-game-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Bingo multiplayer game - Monorepo with React Native mobile app and NestJS backend",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:mobile": "npm run start --workspace=@bingo/mobile",
    "dev:backend": "npm run start:dev --workspace=@bingo/backend",
    "dev:all": "npm run dev:backend & npm run dev:mobile",
    "build:mobile": "npm run build --workspace=@bingo/mobile",
    "build:backend": "npm run build --workspace=@bingo/backend",
    "build:all": "npm run build:backend && npm run build:mobile",
    "test:mobile": "npm run test --workspace=@bingo/mobile",
    "test:backend": "npm run test --workspace=@bingo/backend",
    "test:all": "npm run test:backend && npm run test:mobile",
    "lint:mobile": "npm run lint --workspace=@bingo/mobile",
    "lint:backend": "npm run lint --workspace=@bingo/backend",
    "lint:all": "npm run lint:backend && npm run lint:mobile",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "install:all": "npm install",
    "prisma:generate": "npm run prisma:generate --workspace=@bingo/backend",
    "prisma:migrate": "npm run prisma:migrate --workspace=@bingo/backend",
    "prisma:studio": "npm run prisma:studio --workspace=@bingo/backend"
  },
  "keywords": [
    "bingo",
    "multiplayer",
    "react-native",
    "nestjs",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
